<%= render :partial => "events/showp",
           :layout => "li",
           :collection => related_objs[:events],
           :locals => { :options => common_options } %>
</ul>

<% for type in related_objs[:unhandled_types] %>
  <%= "Warning: unhandled type " %>
  <%= type %>
  <%= "<br />" %>
<% end %>
</div>
<% end %>

