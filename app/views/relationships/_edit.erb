<%= form_tag({ :action => 'update', :id => edit.id }, { :remote => true, :method => :patch }) do %>

<%= hidden_field 'form', 'referenceId', :value => edit.get_extra(:reference).id if not edit.get_extra(:reference).nil? %>
<%= hidden_field 'form', 'topName', :value => topName if defined? topName %>

<%= text_field 'relationship', 'name' %><br/>

<input type="submit" value="Save">

<% related_objects = edit.get_extra(:related_objects) %>
<%= render :partial => 'event_dates/showp',
		:collection => related_objects[:event_dates],
		:locals => { :enclosedById => true, :showModifier => false } %>
<%= render :partial => 'addresses/showp',
		:collection => related_objects[:addresses],
		:locals => { :enclosedById => true, :showModifier => false } %>
<%= render :partial => 'notes/showp',
		:collection => related_objects[:notes],
		:locals => { :enclosedById => true, :showModifier => false } %>

<% end %>
